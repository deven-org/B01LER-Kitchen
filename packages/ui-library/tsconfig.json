{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "module": "es2015",
    "target": "es2020",
    "jsx": "react",
    "allowJs": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "useDefineForClassFields": false
  },
  "include": ["src"],
  "exclude": [""]
}
