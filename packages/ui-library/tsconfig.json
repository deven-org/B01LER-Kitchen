{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "module": "es2020",
    "target": "es2020",
    "jsx": "react",
    "allowJs": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "useDefineForClassFields": false,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules": {
          "no-missing-import": "off"
        }
      }
    ]
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts", "src/**/*.stories.ts"]
}
