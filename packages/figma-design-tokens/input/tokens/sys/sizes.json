{
  "sys": {
    "borderradius": {
      "sm": {
        "$type": "borderRadius",
        "$value": "{core.borderradius.base}*0.5"
      },
      "md": {
        "$type": "borderRadius",
        "$value": "{core.borderradius.base}*1"
      },
      "lg": {
        "$type": "borderRadius",
        "$value": "{core.borderradius.base}*2"
      },
      "xl": {
        "$type": "borderRadius",
        "$value": "{core.borderradius.base}*3"
      },
      "round": {
        "$type": "borderRadius",
        "$value": "9999"
      },
      "none": {
        "$type": "borderRadius",
        "$value": "0"
      }
    },
    "borderwidth": {
      "thin": {
        "$type": "borderWidth",
        "$value": "{core.borderwidth.base}*0.5"
      },
      "medium": {
        "$type": "borderWidth",
        "$value": "{core.borderwidth.base}*1"
      },
      "bold": {
        "$type": "borderWidth",
        "$value": "{core.borderwidth.base}*2"
      },
      "heavy": {
        "$type": "borderWidth",
        "$value": "{core.borderwidth.base}*3"
      },
      "none": {
        "$type": "borderWidth",
        "$value": "0"
      }
    }
  }
}