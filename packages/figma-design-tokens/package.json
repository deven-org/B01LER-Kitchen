{
  "name": "@boiler/figma-design-tokens",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "generate-json-structure": "wireit",
    "generate-typescript-semantic-structure": "wireit",
    "generate-typescript-component-structure": "wireit",
    "generate-index-files": "wireit",
    "tokens:generate": "wireit"
  },
  "wireit": {
    "generate-json-structure": {
      "command": "node ./config/generate-json-structure.mjs"
    },
    "generate-typescript-semantic-structure": {
      "command": "make_types -i ../ui-library/src/foundation/_tokens-generated/semanticTokensType.generated.ts ../ui-library/src/foundation/_tokens-generated/semantic.generated.json semanticTokens"
    },
    "generate-typescript-component-structure": {
      "command": "make_types -i ../ui-library/src/foundation/_tokens-generated/componentTokensType.generated.ts ../ui-library/src/foundation/_tokens-generated/component.generated.json componentTokens"
    },
    "generate-index-files": {
      "command": "node ./config/generate-index-files.mjs"
    },
    "tokens:generate:raw": {
      "command": "node ./config/style-dictionary.config.cjs",
      "dependencies": [
        "generate-index-files",
        "generate-json-structure",
        "generate-typescript-semantic-structure",
        "generate-typescript-component-structure"
      ]
    },
    "tokens:generate": {
      "command": "prettier ../ui-library/src/foundation/_tokens-generated/* --write",
      "dependencies": [
        "tokens:generate:raw"
      ]
    }
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tokens-studio/sd-transforms": "^0.4.3",
    "lodash.kebabcase": "4.1.1",
    "maketypes": "^1.1.2",
    "style-dictionary": "^3.7.2"
  }
}
